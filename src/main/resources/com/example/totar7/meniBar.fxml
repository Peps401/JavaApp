<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.totar7.MeniBar">
   <children>
      <MenuBar layoutY="8.0" prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Profesor">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#searchProf" text="Pretraga" />
              <MenuItem mnemonicParsing="false" onAction="#newProf" text="Unos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Student">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#searchStudent" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#newStudent" text="Unos" />
                <MenuItem mnemonicParsing="false" onAction="#deleteStudent" text="Brisanje" />
                <MenuItem mnemonicParsing="false" onAction="#updateStudent" text="Izmjena" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Predmet">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#searchSubject" text="Pretraga" />
              <MenuItem mnemonicParsing="false" onAction="#newSubject" text="Unos" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Ispiti">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#searchExam" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#newExam" text="Unos" />
                  <MenuItem mnemonicParsing="false" onAction="#updateExam" text="Izmjena" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
